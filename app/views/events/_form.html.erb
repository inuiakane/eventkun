<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :info %><br>
    <%= f.text_area :info %>
  </div>
  <div class="field">
    <%= f.label :start_at %><br>
    <%= f.datetime_select :start_at %>
  </div>
  <div class="field">
    <%= f.label :end_at %><br>
    <%= f.datetime_select :end_at %>
  </div>
  <div class="field">
    <%= f.label :is_public %><br>
    <%= f.radio_button :is_public, 1, {:checked => true} %> 公開
    <%= f.radio_button :is_public, 0, {} %> 非公開
    <%#= f.text_field :is_public %>
  </div>
  <%= f.hidden_field :key %>

<% if false %>
  <div class="field">
    <%= f.label :key %><br>
    <%= f.text_field :key %>
  </div>
<% end %>
  <hr>
  <div class="actions">
    <div class="pull-left">
      <%= link_to 'Back', events_path, class: "btn btn-default" %>
      <%= link_to 'Show', "/events/#{@event.key}", class: "btn btn-default" %>
    </div>
    <div class="text-center">
      <%= f.submit class: "btn btn-success" %>
    </div>
  </div>
<% end %>
