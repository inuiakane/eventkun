<h1>管理者向けイベント一覧</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>イベント名</th>
      <th>イベント内容</th>
      <th>開始日時</th>
      <th>終了日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.info %></td>
        <td><%= event.start_at %></td>
        <td><%= event.end_at %></td>
        <td><%= link_to 'Show', "/events/#{event.key}" %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しいイベントを作成する', new_event_path, class: "btn btn-primary" %>
